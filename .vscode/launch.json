{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/UniversalUnityHooks.Core/bin/Debug/net5.0/UniversalUnityHooks.Core.dll",
            "args": ["execute",
                     "-i", "../UniversalUnityHooks.Sample.Input/bin/Debug/net5.0/UniversalUnityHooks.Sample.Input.dll",
                     "-t", "../UniversalUnityHooks.Sample.Target/bin/Debug/net5.0/UniversalUnityHooks.Sample.Target.dll"],
            "cwd": "${workspaceFolder}/UniversalUnityHooks.Core",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}